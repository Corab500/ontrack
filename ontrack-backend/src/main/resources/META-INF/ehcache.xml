<ehcache
        updateCheck="false">
    <defaultCache
            maxElementsInMemory="10000"
            eternal="false"
            timeToIdleSeconds="300"
            timeToLiveSeconds="300"
            overflowToDisk="false"
            statistics="true"
            memoryStoreEvictionPolicy="LRU"/>
    <!-- Services -->
    <cache name="CONFIGURATION"
           maxElementsInMemory="3"
           eternal="false"
           timeToIdleSeconds="36000"
           timeToLiveSeconds="36000"
           statistics="true"
           overflowToDisk="false" />
    <cache name="MAIL"
           maxElementsInMemory="1"
           eternal="false"
           timeToIdleSeconds="36000"
           timeToLiveSeconds="36000"
           statistics="true"
           overflowToDisk="false" />
    <cache name="LDAP"
           maxElementsInMemory="1"
           eternal="false"
           timeToIdleSeconds="36000"
           timeToLiveSeconds="36000"
           statistics="true"
           overflowToDisk="false" />
    <!-- DAO -->
    <cache name="CONFIGURATION_KEY"
           maxElementsInMemory="50"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="3600"
           statistics="true"
           overflowToDisk="false" />
    <cache name="ACCOUNT"
           maxElementsInMemory="100"
           eternal="false"
           timeToIdleSeconds="36000"
           timeToLiveSeconds="36000"
           statistics="true"
           overflowToDisk="false" />
    <cache name="PROJECT"
           maxElementsInMemory="10"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="3600"
           statistics="true"
           overflowToDisk="false" />
    <cache name="BRANCH"
           maxElementsInMemory="50"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="3600"
           statistics="true"
           overflowToDisk="false" />
    <cache name="VALIDATION_STAMP"
           maxElementsInMemory="100"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="3600"
           statistics="true"
           overflowToDisk="false" />
    <cache name="BUILD"
           maxElementsInMemory="200"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="3600"
           statistics="true"
           overflowToDisk="false" />
</ehcache>